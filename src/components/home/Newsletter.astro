---
import { Icon } from "astro-icon/components";

import Section from "@components/common/Section.astro";
---

<Section>
  <div
    class="newsletter-bakcground min-h-[250px] lg:min-h-[400px] px-8 py-4 rounded-2xl flex flex-col justify-around"
  >
    <div class="flex flex-col lg:gap-4">
      <h4
        class="text-2xl md:text-3xl lg:text-5xl xl:text-7xl font-bold text-base-50 uppercase"
      >
        Latest updates on <br />
        <strong class="text-main-400">national global news</strong>
      </h4>
      <h5 class="text-sm lg:text-xl xl:text-2xl text-base-50 md:uppercase">
        Delivering real-time updates and the lastest headlines daily.
      </h5>
    </div>

    <form class="flex justify-start">
      <span
        class="min-w-full md:min-w-[80%] lg:min-w-[50%] p-2 px-4 lg:p-4 bg-base-900 border lg:border-2 border-base-400 focus-within:border-base-200 transition-all rounded-xl lg:rounded-2xl flex items-center justify-between"
      >
        <input
          type="email"
          placeholder="Enter your email..."
          class="w-full bg-transparent text-base-200 placeholder:text-base-300 text-sm md:text-md lg:text-xl outline-none"
        />

        <Icon name="search" class={"size-6 lg:size-8 text-main-400 "} />
      </span>
    </form>
  </div>
</Section>

<style>
  .newsletter-bakcground {
    background-image:
      linear-gradient(to right bottom, #141414, #1414143f, #ff5c27),
      url("data:image/svg+xml,<svg id='patternId' width='100%' height='100%' xmlns='http://www.w3.org/2000/svg'><defs><pattern id='a' patternUnits='userSpaceOnUse' width='26' height='26' patternTransform='scale(1) rotate(0)'><rect x='0' y='0' width='100%' height='100%' fill='%231b1b1bff'/><path d='M10-6V6M10 14v12M26 10H14M6 10H-6' transform='translate(3,0)' stroke-linecap='square' stroke-width='0.5' stroke='%23ff5c27ff' fill='none'/></pattern></defs><rect width='800%' height='800%' transform='translate(-40,-40)' fill='url(%23a)'/></svg>");
    background-blend-mode: overlay;
    background-attachment: fixed;
  }
</style>
